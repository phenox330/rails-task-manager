
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>. <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe,
  tasks_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>

<hr>
<p class="pl-3"><%= link_to "+ Add a new task", new_task_path %></p>
